name: Minitwit Automated Testing

on:
  push:
    branches:
      - development
  workflow_run:
    workflows:
      - "Automated Testing"
    types:
      - completed
    branches:
      - development

jobs:
  cypress-test:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout
        uses: actions/checkout@v2
    
      - name: Cypress run
        uses: cypress-io/github-action@v5.5.1
        with:
          start: go run minitwit.go -t
